# zsh specific stuff 
	KEYTIMEOUT=1
# }

#env vars {
  export PATH="$HOME/bin:$PATH"
  export PATH=/usr/local/sbin:$PATH
  export PATH=/usr/local/bin:$PATH
  export PATH=$HOME/.cargo/bin:$PATH
  export PATH=$HOME/.nvm/bin:$PATH
  export EDITOR="vim"

  export WORKSPACE=$HOME/workspace
  export DOTFILES=$WORKSPACE/dotfiles
  export GOPATH=$WORKSPACE/go
  export PATH=$GOPATH/bin:$PATH
  export CARGO_HOME=$HOME/.cargo
#}

#aliases {
  alias ..="cd .."
  alias py="python3"
  alias lod="echo ಠ_ಠ"
  alias j="jump"
  alias v="nvim"
  alias vim="nvim"

  alias dotfiles="cd $DOTFILES"
  alias workspace="cd $WORKSPACE"
#}

if [ -f "$HOME/.zshortcuts" ]; then 
	source $HOME/.zshortcuts
fi

if [ -f "$HOME/.zsecure" ]; then
    source $HOME/.zsecure
fi

if [ -f "$HOME/.zprofile_linux" ]; then
    source $HOME/.zprofile_linux
fi

if [ -f "$HOME/.zprofile_darwin" ]; then
    source $HOME/.zprofile_darwin
fi

if [ -f "$CARGO_HOME/env" ]; then
	source $CARGO_HOME/env
fi

if [ -f "$HOME/.ssh/id_rsa" ]; then 
	ssh-add $HOME/.ssh/id_rsa &> /dev/null
fi

if [ -f "$HOME/.ssh/blend_id_rsa" ]; then
	ssh-add $HOME/.ssh/blend_id_rsa &> /dev/null
fi
