[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto

[core]
  editor = nvim

[merge]
  tool = opendiff

[alias]
  a = add .
  co = checkout
  c = commit
  st = status
  br = branch
  nb = checkout -b
  cp0 = commit -am \"progress checkpoint: use 'git cp' from here on\"
  cp = commit --amend --no-edit
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  unstage = reset HEAD
  uncommit = reset --soft HEAD^
  undo = checkout --

[push]
  default = simple

[advice]
  statusHints = false

[url "git@github.com:"]
  insteadOf = "https://github.com/"

[url "git@git.blendlabs.com:"]
  insteadOf = "https://git.blendlabs.com"

[credential]
  helper = cache

[init]
	defaultBranch = main
[user]
	email = will@blend.com
	name = Will Charczuk
